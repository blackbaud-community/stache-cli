language: node_js

before_script:
  - npm i -g grunt-cli blackbaud-stache-cli

script:
  - export STACHE_CLI=/home/travis/.nvm/$(node --version)/lib/node_modules/blackbaud-stache-cli
  - stache build --config=stache.yml,stache.prod.yml,$STACHE_CLI/stache.deploy.yml,stache.deploy.yml
  - stache commitBuild --config=$TRAVIS_BUILD_DIR/stache.deploy.yml

cache:
  directories:
    - node_modules
